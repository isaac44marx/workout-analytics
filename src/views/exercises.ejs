<h1>Exercises</h1>

<h2>Add Exercise</h2>

<form method="POST" action="/exercises">
  <div>
    <label>
      Name:
      <input type="text" name="name" required>
    </label>
  </div>

  <div>
    <label>
      Category:
      <input type="text" name="category">
    </label>
  </div>

  <button type="submit">Add Exercise</button>
</form>

<% if (!exercises || exercises.length === 0) { %>
  <p>No exercises yet. Add some seed data or create an exercise.</p>
<% } else { %>
  <ul>
    <% exercises.forEach(e => { %>
      <li>
        <strong><%= e.name %></strong>
        <% if (e.category) { %>
          â€” <%= e.category %>
        <% } %>
      </li>
    <% }) %>
  </ul>
<% } %>